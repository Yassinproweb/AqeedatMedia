{
  "name": "deen-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:css\" \"vite\"",
    "dev:css": "tailwindcss -i ./src/main.css -o ./public/main.css --watch",
    "build": "pnpm run build:css",
    "build:css": "tailwindcss -i ./src/main.css -o ./public/main.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.3",
    "tailwindcss": "3",
    "vite": "^6.2.0"
  }
}
